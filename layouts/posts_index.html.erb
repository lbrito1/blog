<div class='pure-g'>
  <% posts.each do |post| %>
    <div class='post-index pure-u-1-1'>
      <h2><%= link_to post[:title], post.path %></h2>

      <article class="text">
          <%= get_post_start(post) %>
        <div class="post-tags">
          <% if post[:tags] && show_tags %>
            <div class="tags">
            <% post[:tags].each.with_index do |tag, i| %>
              <a class="pure-button button-xsmall" href="/tags/<%= tag %>"><%= tag %></a>
            <% end %>
            </div>
          <% end %>
        </div>

        <div class="pure-g post-footer">
          <div class = pure-u-1-2>
              <a class='read-more' href='<%= post.path %>'>Continue reading &rsaquo;</a>
          </div>
          <div class="pure-u-1-2 post-meta">
            <aside>Posted <%= post[:created_at]&.strftime('%b %d, %Y') %></aside>

          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>
